<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados Pessoais"
        android:textAlignment="center"
        android:textSize="36sp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <EditText
        android:id="@+id/editText_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe seu nome"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe seu e-mail"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <EditText
        android:id="@+id/editText_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:text="(##) #####-####"
        android:layout_row="6"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <EditText
        android:id="@+id/editText_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="8"
        android:ems="8"
        android:inputType="textPassword"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirme sua Senha"
        android:layout_column="0"
        android:layout_row="9"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>
    <EditText
        android:id="@+id/editText_senha2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="10"
        android:ems="8"
        android:inputType="textPassword"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp" />
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Cadastrar"
        android:layout_column="0"
        android:layout_row="11"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

</GridLayout>
